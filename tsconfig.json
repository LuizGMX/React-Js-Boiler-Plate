{
  "compilerOptions": {
    "lib": ["DOM","DOM.Iterable","ESNext",
      "es5",
      "scripthost",
      "es2015.promise"],                                   
    "allowJs": true,                             
    "jsx": "react-jsx",                           
    "noEmit": true,                              
    "strict": true,                                 
    "moduleResolution": "node",                 
    "resolveJsonModule": true, 
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "module": "commonjs"        
  },
  "include":["src"]
}